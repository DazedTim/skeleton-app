<?php

// WordPress shortcut functions

  // Echo assets path
	function the_assets_path($path = '') {
		echo get_assets_path($path);
	}
  
  // Get assets path
	function get_assets_path($path = '') {
		$template_path = get_template_directory_uri() . '/assets/';
		$template_path .= $path;
		return $this;
	}


?>
